
<div class="container">
  <div class="row">

  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-1 col-xs-12">
    <h2>Log in</h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: 'Email' %>

      <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'Password' %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
      <% end -%>

      <%= f.form_group do %>
        <%= f.submit "Log in" %>
      <% end %>
    <% end %>
  </div>
</div>